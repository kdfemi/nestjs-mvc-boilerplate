{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@layouts/*": ["src/views/layouts/*"],
      "@partials/*": ["src/views/partials/*"],
      "@components/*": ["src/views/components/*"],
    },
    "incremental": true,

  },
  "exclude": ["node_modules", "dist"]
}
